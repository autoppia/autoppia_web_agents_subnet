# Authentication
AUTH_TOKEN=your-secret-token-here
ALLOWED_IPS=127.0.0.1,::1

# Docker Configuration
DOCKER_NETWORK=deployer_network
DOCKER_REGISTRY=

# Port Management
PORT_POOL_START=40000
PORT_POOL_END=41000

# Health Check Configuration
DEFAULT_PROBE_TIMEOUT=120
DEFAULT_GRACE_PERIOD=60
DEFAULT_STARTUP_DELAY=3

# Rate Limiting
MAX_CONCURRENT_BUILDS=3
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Storage
STATE_DIR=/srv/deployer/state
WORK_DIR=/srv/deployer/work
LOGS_DIR=/srv/deployer/logs

# Traefik Configuration
TRAEFIK_API_URL=http://traefik:8080
TRAEFIK_PROVIDER_URL=http://traefik:8080/api/http/routers

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
MAX_DEPLOYMENTS=50
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=1.0
